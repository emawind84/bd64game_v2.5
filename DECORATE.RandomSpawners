//R20 CAN NOW ACTIVATE PROJECT NIGHTMARE RANDOM SPAWNERS FROM BD64 OPTIONS		/R23.3 REMOVED RANDOM SPAWNER FOR SPAWNITEMEX
Actor Dyn_PlasmaRifleReplacer Replaces Plasmarifle
{
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 1 ACS_ExecuteAlways(1485,0)										//R26 NOW SEPARATE OPTION
		TNT1 A 1 A_Jump(256,"Deciding")
	Deciding:
		TNT1 A 1
		loop
	NormalSpawner:
		TNT1 A 0 A_SpawnItemEx("PlasmaRifleSpawner",0,0,0,0,0,0,0, SXF_TRANSFERPOINTERS|SXF_TRANSFERSPECIAL|SXF_CLEARCALLERTID, 0, tid)
		Stop
	DynSpawner:
		TNT1 A 1 A_Jump(64,2) // 64/256 is approx. 25% chance of jump
		TNT1 A 0 A_SpawnItemEx("PlasmaRifleSpawner",0,0,0,0,0,0,0, SXF_TRANSFERPOINTERS|SXF_TRANSFERSPECIAL|SXF_CLEARCALLERTID, 0, tid)
		stop
		TNT1 A 0 A_SpawnItemEx("LasergunSpawner",0,0,0,0,0,0,0, SXF_TRANSFERPOINTERS|SXF_TRANSFERSPECIAL|SXF_CLEARCALLERTID, 0, tid)
		stop
	}
}

